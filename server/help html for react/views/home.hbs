
{{#if isLogged}}
<main>
    {{#if articles}}
     <div class="shoes">
         {{#each articles}}
        <div class="shoe">
            <img src="{{imageUrl}}">
            <h3>{{name}}</h3>
            <a href="/products/details/{{_id}}">Buy it for {{price}} $</a>
        </div>
       {{/each}}

    </div> 
    {{else}}
   <h1>No shoes to display. Be the first to create a new offer...</h1>
{{/if}}
</main>
{{else}}
    <main>
        <div class="container">
            <div class="about-us">
                <div>
                    <img src="/shoes.jpg" alt="">
                    <img src="/shoes2.jpg" alt="">
                </div>
                <p>
                    <a href="/user/register">Register Now</a> and Try it!
                </p>
            </div>
        </div>
    </main>
{{/if}}